<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="layout_style">
        <item name="android:background">@color/black</item>
    </style>

    <style name="button_style" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/dark_orange</item>
        <item name="android:backgroundTint">@color/moccasin</item>
    </style>

    <style name="text_view_style" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_orange</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="edit_text_style" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/dark_orange</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="view_style">
        <item name="android:background">@color/dark_orange</item>
    </style>

    <style name="tool_bar_style" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/dark_orange</item>
        <item name="iconTint">@drawable/ic_blue_arrow</item>
    </style>

</resources>