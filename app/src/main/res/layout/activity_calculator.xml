<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorActivity">

    <androidx.appcompat.widget.Toolbar
        style="@style/tool_bar_style"
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="@dimen/tool_bar_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="SecondActivity"
        android:layout_marginTop="@dimen/tool_bar_margin_top"/>

    <TextView
        style="@style/text_view_style"
        android:id="@+id/result_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="@dimen/text_view_padding"
        android:text="@string/text_calc_example"
        android:textSize="@dimen/text_view_calc_size"
        app:layout_constraintBottom_toTopOf="@+id/calculator_grid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/text_view_margin_end"
        android:layout_marginStart="@dimen/text_view_margin_start"/>

    <View
        style="@style/view_style"
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/break_line_height"
        app:layout_constraintTop_toBottomOf="@id/result_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/break_line_margin_top"
        android:layout_marginEnd="@dimen/text_view_margin_end"
        android:layout_marginStart="@dimen/text_view_margin_start"/>

    <!-- Сетка кнопок калькулятора -->
    <GridLayout
        android:id="@+id/calculator_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_layout_margin_top"
        android:columnCount="4"
        android:padding="@dimen/grid_layout_padding"
        android:rowCount="5"
        app:layout_constraintBottom_toTopOf="@+id/back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider">


        <!-- Первая строка -->
        <com.google.android.material.button.MaterialButton
            style="@style/button_style"
            android:layout_height="@dimen/button_calc_height"
            android:layout_margin="@dimen/button_calc_margin"
            android:text="@string/c" />

        <com.google.android.material.button.MaterialButton
            style="@style/button_style"
            android:layout_height="@dimen/button_calc_height"
            android:layout_margin="@dimen/button_calc_margin"
            android:text="@string/backspace" />

        <com.google.android.material.button.MaterialButton
            style="@style/button_style"
            android:layout_height="@dimen/button_calc_height"
            android:layout_margin="@dimen/button_calc_margin"
            android:text="@string/percent" />

        <com.google.android.material.button.MaterialButton
            style="@style/button_style"
            android:layout_height="@dimen/button_calc_height"
            android:layout_margin="@dimen/button_calc_margin"
            android:text="@string/division" />

        <!-- Вторая -->
        <com.google.android.material.button.MaterialButton
            style="@style/button_style"
            android:layout_height="@dimen/button_calc_height"
            android:layout_margin="@dimen/button_calc_margin"
            android:text="@string/btn7" />

        <com.google.android.material.button.MaterialButton
            style="@style/button_style"
            android:layout_height="@dimen/button_calc_height"
            android:layout_margin="@dimen/button_calc_margin"
            android:text="@string/btn8" />

        <com.google.android.material.button.MaterialButton
            style="@style/button_style"
            android:layout_height="@dimen/button_calc_height"
            android:layout_margin="@dimen/button_calc_margin"
            android:text="@string/btn9" />

        <com.google.android.material.button.MaterialButton
            style="@style/button_style"
            android:layout_height="@dimen/button_calc_height"
            android:layout_margin="@dimen/button_calc_margin"
            android:text="@string/multiplication" />

        <!-- Третья -->
        <com.google.android.material.button.MaterialButton
            style="@style/button_style"
            android:layout_height="@dimen/button_calc_height"
            android:layout_margin="@dimen/button_calc_margin"
            android:text="@string/btn4" />

        <com.google.android.material.button.MaterialButton
            style="@style/button_style"
            android:layout_height="@dimen/button_calc_height"
            android:layout_margin="@dimen/button_calc_margin"
            android:text="@string/btn5" />

        <com.google.android.material.button.MaterialButton
            style="@style/button_style"
            android:layout_height="@dimen/button_calc_height"
            android:layout_margin="@dimen/button_calc_margin"
            android:text="@string/btn6" />

        <com.google.android.material.button.MaterialButton
            style="@style/button_style"
            android:layout_height="@dimen/button_calc_height"
            android:layout_margin="@dimen/button_calc_margin"
            android:text="@string/subtraction" />

        <!-- Четвертая -->
        <com.google.android.material.button.MaterialButton
            style="@style/button_style"
            android:layout_height="@dimen/button_calc_height"
            android:layout_margin="@dimen/button_calc_margin"
            android:text="@string/btn1" />

        <com.google.android.material.button.MaterialButton
            style="@style/button_style"
            android:layout_height="@dimen/button_calc_height"
            android:layout_margin="@dimen/button_calc_margin"
            android:text="@string/btn2" />

        <com.google.android.material.button.MaterialButton
            style="@style/button_style"
            android:layout_height="@dimen/button_calc_height"
            android:layout_margin="@dimen/button_calc_margin"
            android:text="@string/btn3" />

        <com.google.android.material.button.MaterialButton
            style="@style/button_style"
            android:layout_height="@dimen/button_calc_height"
            android:layout_margin="@dimen/button_calc_margin"
            android:text="@string/addition" />


        <!-- Пятая -->
        <com.google.android.material.button.MaterialButton
            style="@style/button_style"
            android:layout_height="@dimen/button_calc_height"
            android:layout_margin="@dimen/button_calc_margin"
            android:text="@string/btn0" />

        <com.google.android.material.button.MaterialButton
            style="@style/button_style"
            android:layout_height="@dimen/button_calc_height"
            android:layout_margin="@dimen/button_calc_margin"
            android:text="@string/coma" />

        <com.google.android.material.button.MaterialButton
            style="@style/button_style"
            android:layout_height="@dimen/button_calc_height"
            android:layout_margin="@dimen/button_calc_margin"
            android:text="@string/plus_or_minus" />

        <com.google.android.material.button.MaterialButton
            style="@style/button_style"
            android:layout_height="@dimen/button_calc_height"
            android:layout_margin="@dimen/button_calc_margin"
            android:text="@string/equally" />
    </GridLayout>

    <com.google.android.material.button.MaterialButton
        style="@style/button_style"
        android:id="@+id/back_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        android:text="@string/back"
        android:textSize="@dimen/textSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>