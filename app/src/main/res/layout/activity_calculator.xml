<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="CalculatorActivity"
        android:layout_marginTop="24dp"/>

    <TextView
        style="@style/text_view_style"
        android:id="@+id/result_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="@dimen/text_view_padding"
        android:text="@string/text_calc_example"
        android:textSize="@dimen/text_view_calc_size"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/text_view_margin_top"
        android:layout_marginEnd="@dimen/text_view_margin_end"
        android:layout_marginStart="@dimen/text_view_margin_start"
        />

    <View
        android:id="@+id/divider"
        style="@style/view_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/break_line_height"
        android:layout_marginStart="@dimen/text_view_margin_start"
        android:layout_marginTop="@dimen/break_line_margin_top"
        android:layout_marginEnd="@dimen/text_view_margin_end"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_view"
        app:layout_constraintBottom_toTopOf="@+id/c"/>

    <!-- Сетка кнопок калькулятора -->

    <!-- Первая строка -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/c"
        style="@style/button_style"
        android:layout_height="@dimen/button_calc_height"
        android:text="@string/c"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/backspace"
        app:layout_constraintTop_toBottomOf="@+id/divider"

        android:layout_marginTop="@dimen/button_calc_margin_top_fist_row"
        android:layout_marginEnd="@dimen/button_calc_margin_left_right"
        android:layout_marginStart="@dimen/button_calc_margin_side"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/backspace"
        style="@style/button_style"
        android:layout_height="@dimen/button_calc_height"
        android:text="@string/backspace"

        app:layout_constraintStart_toEndOf="@+id/c"
        app:layout_constraintEnd_toStartOf="@+id/percent"
        app:layout_constraintTop_toBottomOf="@+id/divider"

        android:layout_marginTop="@dimen/button_calc_margin_top_fist_row"
        android:layout_marginEnd="@dimen/button_calc_margin_left_right"
        android:layout_marginStart="@dimen/button_calc_margin_left_right"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/percent"
        style="@style/button_style"
        android:layout_height="@dimen/button_calc_height"
        android:text="@string/percent"

        app:layout_constraintStart_toEndOf="@+id/backspace"
        app:layout_constraintEnd_toStartOf="@+id/division"
        app:layout_constraintTop_toBottomOf="@+id/divider"

        android:layout_marginTop="@dimen/button_calc_margin_top_fist_row"
        android:layout_marginEnd="@dimen/button_calc_margin_left_right"
        android:layout_marginStart="@dimen/button_calc_margin_left_right"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/division"
        style="@style/button_style"
        android:layout_height="@dimen/button_calc_height"
        android:text="@string/division"

        app:layout_constraintStart_toEndOf="@+id/percent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"

        android:layout_marginTop="@dimen/button_calc_margin_top_fist_row"
        android:layout_marginEnd="@dimen/button_calc_margin_side"
        android:layout_marginStart="@dimen/button_calc_margin_left_right"
        />

    <!-- Вторая -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn7"
        style="@style/button_style"
        android:layout_height="@dimen/button_calc_height"
        android:text="@string/_7"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn8"
        app:layout_constraintTop_toBottomOf="@+id/c"

        android:layout_marginTop="@dimen/button_calc_margin_top"
        android:layout_marginEnd="@dimen/button_calc_margin_left_right"
        android:layout_marginStart="@dimen/button_calc_margin_side"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn8"
        style="@style/button_style"
        android:layout_height="@dimen/button_calc_height"
        android:text="@string/_8"

        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintEnd_toStartOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/backspace"

        android:layout_marginTop="@dimen/button_calc_margin_top"
        android:layout_marginEnd="@dimen/button_calc_margin_left_right"
        android:layout_marginStart="@dimen/button_calc_margin_left_right"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn9"
        style="@style/button_style"
        android:layout_height="@dimen/button_calc_height"
        android:text="@string/_9"

        app:layout_constraintStart_toEndOf="@+id/btn8"
        app:layout_constraintEnd_toStartOf="@+id/multiplication"
        app:layout_constraintTop_toBottomOf="@+id/percent"

        android:layout_marginTop="@dimen/button_calc_margin_top"
        android:layout_marginEnd="@dimen/button_calc_margin_left_right"
        android:layout_marginStart="@dimen/button_calc_margin_left_right"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/multiplication"
        style="@style/button_style"
        android:layout_height="@dimen/button_calc_height"
        android:text="@string/multiplication"

        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/division"

        android:layout_marginTop="@dimen/button_calc_margin_top"
        android:layout_marginEnd="@dimen/button_calc_margin_side"
        android:layout_marginStart="@dimen/button_calc_margin_left_right"/>

    <!-- Третья -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn4"
        style="@style/button_style"
        android:layout_height="@dimen/button_calc_height"
        android:text="@string/_4"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn7"

        android:layout_marginTop="@dimen/button_calc_margin_top"
        android:layout_marginEnd="@dimen/button_calc_margin_left_right"
        android:layout_marginStart="@dimen/button_calc_margin_side"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn5"
        style="@style/button_style"
        android:layout_height="@dimen/button_calc_height"
        android:text="@string/_5"

        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintEnd_toStartOf="@+id/btn6"
        app:layout_constraintTop_toBottomOf="@+id/btn8"

        android:layout_marginTop="@dimen/button_calc_margin_top"
        android:layout_marginEnd="@dimen/button_calc_margin_left_right"
        android:layout_marginStart="@dimen/button_calc_margin_left_right"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn6"
        style="@style/button_style"
        android:layout_height="@dimen/button_calc_height"
        android:text="@string/_6"

        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintEnd_toStartOf="@+id/subtraction"
        app:layout_constraintTop_toBottomOf="@+id/btn9"

        android:layout_marginTop="@dimen/button_calc_margin_top"
        android:layout_marginEnd="@dimen/button_calc_margin_left_right"
        android:layout_marginStart="@dimen/button_calc_margin_left_right"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/subtraction"
        style="@style/button_style"
        android:layout_height="@dimen/button_calc_height"
        android:text="@string/subtraction"

        app:layout_constraintStart_toEndOf="@+id/btn6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/multiplication"

        android:layout_marginTop="@dimen/button_calc_margin_top"
        android:layout_marginEnd="@dimen/button_calc_margin_side"
        android:layout_marginStart="@dimen/button_calc_margin_left_right"/>

    <!-- Четвертая -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn1"
        style="@style/button_style"
        android:layout_height="@dimen/button_calc_height"
        android:text="@string/_1"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn2"
        app:layout_constraintTop_toBottomOf="@+id/btn4"

        android:layout_marginTop="@dimen/button_calc_margin_top"
        android:layout_marginEnd="@dimen/button_calc_margin_left_right"
        android:layout_marginStart="@dimen/button_calc_margin_side"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn2"
        style="@style/button_style"
        android:layout_height="@dimen/button_calc_height"
        android:text="@string/_2"

        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintEnd_toStartOf="@+id/btn3"
        app:layout_constraintTop_toBottomOf="@+id/btn5"

        android:layout_marginTop="@dimen/button_calc_margin_top"
        android:layout_marginEnd="@dimen/button_calc_margin_left_right"
        android:layout_marginStart="@dimen/button_calc_margin_left_right"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn3"
        style="@style/button_style"
        android:layout_height="@dimen/button_calc_height"
        android:text="@string/_3"

        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintEnd_toStartOf="@+id/addition"
        app:layout_constraintTop_toBottomOf="@+id/btn6"

        android:layout_marginTop="@dimen/button_calc_margin_top"
        android:layout_marginEnd="@dimen/button_calc_margin_left_right"
        android:layout_marginStart="@dimen/button_calc_margin_left_right"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addition"
        style="@style/button_style"
        android:layout_height="@dimen/button_calc_height"
        android:text="@string/addition"

        app:layout_constraintStart_toEndOf="@+id/btn3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtraction"

        android:layout_marginTop="@dimen/button_calc_margin_top"
        android:layout_marginEnd="@dimen/button_calc_margin_side"
        android:layout_marginStart="@dimen/button_calc_margin_left_right"/>


    <!-- Пятая -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn0"
        style="@style/button_style"
        android:layout_height="@dimen/button_calc_height"
        android:text="@string/_0"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/coma"
        app:layout_constraintTop_toBottomOf="@+id/btn1"

        android:layout_marginTop="@dimen/button_calc_margin_top"
        android:layout_marginEnd="@dimen/button_calc_margin_left_right"
        android:layout_marginStart="@dimen/button_calc_margin_side"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/coma"
        style="@style/button_style"
        android:layout_height="@dimen/button_calc_height"
        android:text="@string/coma"

        app:layout_constraintStart_toEndOf="@+id/btn0"
        app:layout_constraintEnd_toStartOf="@+id/plus_or_minus"
        app:layout_constraintTop_toBottomOf="@+id/btn2"

        android:layout_marginTop="@dimen/button_calc_margin_top"
        android:layout_marginEnd="@dimen/button_calc_margin_left_right"
        android:layout_marginStart="@dimen/button_calc_margin_left_right"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/plus_or_minus"
        style="@style/button_style"
        android:layout_height="@dimen/button_calc_height"
        android:text="@string/plus_or_minus"

        app:layout_constraintStart_toEndOf="@+id/coma"
        app:layout_constraintEnd_toStartOf="@+id/equally"
        app:layout_constraintTop_toBottomOf="@+id/btn3"

        android:layout_marginTop="@dimen/button_calc_margin_top"
        android:layout_marginEnd="@dimen/button_calc_margin_left_right"
        android:layout_marginStart="@dimen/button_calc_margin_left_right"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/equally"
        style="@style/button_style"
        android:layout_height="@dimen/button_calc_height"
        android:text="@string/equally"

        app:layout_constraintStart_toEndOf="@+id/plus_or_minus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addition"

        android:layout_marginTop="@dimen/button_calc_margin_top"
        android:layout_marginEnd="@dimen/button_calc_margin_side"
        android:layout_marginStart="@dimen/button_calc_margin_left_right"/>



</androidx.constraintlayout.widget.ConstraintLayout>